{
  "manifest_version": 3,

  "name": "AIBoss",
  "description": "通过 AI 自动帮您投递简历，找工作无忧",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": {
      "16": "ai-boss.png",
      "48": "ai-boss.png",
      "128": "ai-boss.png"
    },
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage"],

  "host_permissions": ["<all_urls>"]
}
